@page
@model ProjectObryckiJustin.Pages.tblCustomer.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/CRUD_Layout.cshtml";
}

<h1>Edit Customer's Information</h1>

<h4>TblCustomer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblCustomer.CustomerId" />
            <div class="form-group">
                <label asp-for="TblCustomer.FirstName" class="control-label"></label>
                <input asp-for="TblCustomer.FirstName" class="form-control" />
                <span asp-validation-for="TblCustomer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblCustomer.LastName" class="control-label"></label>
                <input asp-for="TblCustomer.LastName" class="form-control" />
                <span asp-validation-for="TblCustomer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblCustomer.Gender" class="control-label"></label>
                <input asp-for="TblCustomer.Gender" class="form-control" />
                <span asp-validation-for="TblCustomer.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblCustomer.PhoneNumber" class="control-label"></label>
                <input asp-for="TblCustomer.PhoneNumber" class="form-control" />
                <span asp-validation-for="TblCustomer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblCustomer.Address" class="control-label"></label>
                <input asp-for="TblCustomer.Address" class="form-control" />
                <span asp-validation-for="TblCustomer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
