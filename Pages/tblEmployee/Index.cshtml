@page
@model ProjectObryckiJustin.Pages.tblEmployee.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/CRUD_Layout.cshtml";
}

<h1>Employee's Information</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployee[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployee[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployee[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployee[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblEmployee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.EmployeeId">Details</a> |
                    <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
