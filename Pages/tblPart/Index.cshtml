@page
@model ProjectObryckiJustin.Pages.tblPart.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/CRUD_Layout.cshtml";
}

<h1>Part Information</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblPart[0].PartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPart[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPart[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPart[0].PartDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPart[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblPart) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.PartId">Edit</a> |
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.PartId">Details</a> |
                    <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.PartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-primary" href="~/charts/partchart.html">Total Quantity Sold Chart</a>