@page
@model ProjectObryckiJustin.Pages.tblOrder.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/CRUD_Layout.cshtml";
}

<h1>Edit Order</h1>

<h4>TblOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblOrder.OrderNo" />
            <div class="form-group">
                <label asp-for="TblOrder.OrderDate" class="control-label"></label>
                <input asp-for="TblOrder.OrderDate" class="form-control" />
                <span asp-validation-for="TblOrder.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblOrder.CustomerId" class="control-label"></label>
                <select asp-for="TblOrder.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="TblOrder.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblOrder.EmployeeId" class="control-label"></label>
                <select asp-for="TblOrder.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="TblOrder.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblOrder.PartId" class="control-label"></label>
                <select asp-for="TblOrder.PartId" class="form-control" asp-items="ViewBag.PartId"></select>
                <span asp-validation-for="TblOrder.PartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblOrder.Quantity" class="control-label"></label>
                <input asp-for="TblOrder.Quantity" class="form-control" />
                <span asp-validation-for="TblOrder.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
